<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <title><%= data.page.title || "" %> | The Orange Community Garden</title>

    <%= stylesheet_link_tag "application" %>

    <script type="text/javascript" src="//use.typekit.net/mjh1jan.js"></script>
    <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
  </head>

  <body id="<%= data.page.id %>">
    <header class="container">
      <a href="/" class="brand">
        <img src="/images/logo.png" alt="The Orange Community Garden">
        <span>Orange Community Garden</span>
      </a>

      <nav>
        <a href="/committees">Committees</a>
        <a href="/rules">Rules</a>
        <a href="#">Blog</a>
        <a href="/contact">Contact</a>
      </nav>
    </header>

<% if home? %>
    <%= yield %>
<% else %>
    <div class="container">
      <h1><%= data.page.title %></h1>
    </div>

    <div class="container content">
      <div class="row">
        <div class="span12">
          <%= yield %>
        </div>
      </div>
    </div>

    <div class="container footer">
      <p>&copy; 2012 The Orange Community Garden</p>
    </div>
<% end %>
    <%= javascript_include_tag  "application" %>
  </body>
</html>